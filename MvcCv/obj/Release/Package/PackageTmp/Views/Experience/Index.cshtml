@using MvcCv.Models.Entity
@model List<TblExperience>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Experience List</h2>

<table class="table table-bordered">
    <th>ID</th>
    <th>Header</th>
    <th>Subheader</th>
    <th>Date</th>
    <th>Düzenle</th>
    <th>Sil</th>

    @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ID</td>
                    <td>@item.Header</td>
                    <td>@item.Subheader</td>
                    <td>@item.Date</td>
                    <td><a href="/Experience/GetExperience/@item.ID" class="btn btn-warning">Edit</a></td>
                    <td><a href="/Experience/DeleteExperience/@item.ID" class="btn btn-danger">Delete</a></td>
                </tr>
                
            }
</table>
<a href="/Experience/AddExperience" class="btn btn-primary">Add New Experience</a>