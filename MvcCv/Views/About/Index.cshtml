@using MvcCv.Models.Entity
@model List<TblAbout>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2>About</h2>
<br />
<form method="post">
    @foreach (var item in Model)
    {
        <label>Name</label>
        <input type="text" class="form-control" name="Name" value="@item.Name" />
        <br />
        <label>Surname</label>
        <input type="text" class="form-control" name="Surname" value="@item.Surname" />
        <br />
        <label>Address</label>
        <input type="text" class="form-control" name="Address" value="@item.Address" />
        <br />
        <label>Phone</label>
        <input type="text" class="form-control" name="Phone" value="@item.Phone" />
        <br />
        <label>Mail</label>
        <input type="text" class="form-control" name="Mail" value="@item.Mail" />
        <br />
        <label>Image</label>
        <input type="text" class="form-control" name="Image" value="@item.Image" />
        <br />
        <label>Description</label>
        <textarea rows="5" class="form-control" name="Descriotion">@item.Description</textarea>

    }
    <button class="btn btn-success">Save</button>
</form>
<br />

